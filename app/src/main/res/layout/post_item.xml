<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="avatar"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/ivAvatar"
        android:gravity="center"
        android:textColor="#1c5380"
        android:textStyle="bold"
        android:text="teekirol"
        android:textSize="12sp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/ivAvatar"/>
    <ImageView
        android:id="@+id/ivPin"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/pin_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ivAvatar"
        android:layout_below="@id/tvUsername"/>
    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivAvatar"
        android:layout_below="@id/tvUsername"
        android:layout_toRightOf="@id/ivPin"
        android:layout_marginLeft="3dp"
        android:textSize="12sp"
        android:textColor="#53A3E1"
        android:text="Golden Gate Bridge"/>
    <TextView
        android:id="@+id/tvPostAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:layout_alignBottom="@id/ivAvatar"
        android:layout_alignTop="@id/ivAvatar"
        android:text="10h"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/clock_icon"
        android:layout_toLeftOf="@id/tvPostAge"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@id/ivAvatar"
        android:layout_alignTop="@id/ivAvatar"/>
    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_below="@id/ivAvatar"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher"
        android:adjustViewBounds="true"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:id="@+id/heart"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/heart_icon"
        android:layout_below="@id/ivPhoto"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/heart"
        android:layout_below="@id/ivPhoto"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@id/heart"
        android:gravity="center"
        android:textColor="#1c5380"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="10 likes"/>

    <TextView
        android:id="@+id/tvCaptionUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#1c5380"
        android:text="teekirol"
        android:textStyle="bold"
        android:layout_below="@id/tvLikes"
        android:textSize="12sp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvCaptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/tvLikes"
        android:layout_toRightOf="@id/tvCaptionUsername"
        android:text="This is the best photo that was ever taken and you should Like it"/>

</RelativeLayout>
